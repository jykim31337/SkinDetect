                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Y:" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                    <TextBox Grid.Column="1" x:Name="txtYCRCBYL" Width="30" Height="24"/>
                    <TextBox Grid.Column="2" x:Name="txtYCRCBYH" Width="30" Height="24"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="CR:" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                    <TextBox Grid.Column="1" x:Name="txtYCRCBCRL" Width="30"  Height="24"/>
                    <TextBox Grid.Column="2" x:Name="txtYCRCBCRH" Width="30"  Height="24"/>
                </Grid>
                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="CB:" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                    <TextBox Grid.Column="1" x:Name="txtYCRCBCBL" Width="30"  Height="24"/>
                    <TextBox Grid.Column="2" x:Name="txtYCRCBCBH" Width="30"  Height="24"/>
                </Grid>
                <Grid Grid.Column="3">
                    <CheckBox x:Name="chkLabelColor" Content="LabelColor" HorizontalAlignment="Center" VerticalAlignment="Center"></CheckBox>
                </Grid>
            </Grid>
            <RadioButton Grid.Row="1" x:Name="rbSDHSV" Content="SkinDetectHSV" Margin="5" />
