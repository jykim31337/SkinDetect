                    </Grid.ColumnDefinitions>
                    <TextBlock Text="CR:" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                    <TextBox Grid.Column="1" x:Name="txtYCRCBCRL" Width="30" Margin="5"/>
                    <TextBox Grid.Column="2" x:Name="txtYCRCBCRH" Width="30" Margin="5"/>
                </Grid>
                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="CB:" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                    <TextBox Grid.Column="1" x:Name="txtYCRCBCBL" Width="30" Margin="5"/>
                    <TextBox Grid.Column="2" x:Name="txtYCRCBCBH" Width="30" Margin="5"/>
                </Grid>
            </Grid>
            <RadioButton x:Name="rbSDHSV" Content="SkinDetectHSV" Margin="5" />
